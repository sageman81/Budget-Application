<%- include('../partials/header') %>

<h1>Edit Transaction</h1>

<form action="/transactions/<%= transaction._id %>?_method=PUT" method="POST">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="name" value="<%= transaction.name %>" required>
    </div>
    <div class="form-group">
        <label for="amount">Amount</label>
        <input type="number" class="form-control" id="amount" name="amount" value="<%= transaction.amount %>" required>
    </div>
    <div class="form-group">
        <label for="category">Category</label>
        <select name="category" id="category" required>
            <option value="">Select Category</option>
            <% categories.forEach(function(cat) { %>
                <option value="<%= cat._id %>" <%= transaction.category && transaction.category.equals(cat._id) ? 'selected' : '' %>><%= cat.name %></option>

            <% }) %>
        </select>
          
    </div>
    <div class="form-group" id="otherCategory" style="display:none;">
        <label for="otherCategoryInput">Other Category</label>
        <input type="text" class="form-control" id="otherCategoryInput" name="otherCategory">
    </div>
    <div class="form-group">
        <label for="date">Date</label>
        <input type="date" class="form-control" id="date" name="date" value="<%= transaction.date.toISOString().split('T')[0] %>" required>
    </div>
    <button type="submit" class="btn btn-primary">Update Transaction</button>
</form>

<script>
document.getElementById('category').addEventListener('change', function() {
    var display = this.value == 'Other' ? 'block' : 'none';
    document.getElementById('otherCategory').style.display = display;
});
</script>

<%- include('../partials/footer') %>





